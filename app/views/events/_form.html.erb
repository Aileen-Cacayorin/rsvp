<%= form_for [@user, @event], html: { multipart: true } do |f| %>

  <div class="field form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: '10', autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :start_date %>
    <%= f.date_select :start_date, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :end_date %>
    <%= date_select :end_date, class: "form-control" %>
  </div>

  <%= f.file_field :image %><br>
  <%= f.submit class: "btn btn-success" %>
<% end %>
