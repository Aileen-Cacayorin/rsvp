<div class="container">
  <h1><%= @event.title %></h1>
  <% if @locations.any? %>
    <ul class="list-group">
      <% @locations.each do |location| %>
        <li class="list-group-item"> <span class="title"><%= location.name %></li>
      <% end %>
    </ul>
  <% else %>
    <h3>You have no locations for this event</h3>
  <% end %>
</div>


<div class="container">
  <h1>Guest List</h1>
  <% if @guests.any? %>
  <ul>
    <% @guests.each do |guest| %>
    <li> <%= guest.first_name %> </li>
    <% end %>
  <% else %>
  <p>No Guests Yet</p>
  </ul>
  <% end %>

  <div class="guest">
    <%= form_tag(invite_mailer_path) do %>
    <div class="form-group">
        <%= label_tag 'email', 'Email' %>
        <%= email_field_tag 'email',  class: 'form-control', placeholder: 'Your Email Address' %>
    </div>
    <%= submit_tag "Invite Guest", class: 'btn btn-default' %>
    <% end %>
    </div>

</div>
